    <div class="container">
        <h1>üéâ Event Planner</h1>
        <form id="eventForm">
            <label for="eventType">Event Type:</label>
            <select id="eventType" required>
                <option value="">Select Event Type</option>
                <option value="Wedding">üíç Wedding</option>
                <option value="Birthday">üéÇ Birthday</option>
                <option value="Corporate">üíº Corporate</option>
                <option value="Other">üåà Other</option>
            </select>

            <label for="eventName">Event Name:</label>
            <input type="text" id="eventName" required>

            <label for="eventDate">Event Date:</label>
            <input type="date" id="eventDate" required>

            <label for="eventLocation">Event Location:</label>
            <input type="text" id="eventLocation" required>

            <label for="guestCount">Estimated Guests:</label>
            <input type="number" id="guestCount" min="1" required>

            <label for="additionalDetails">Additional Details:</label>
            <textarea id="additionalDetails" rows="4"></textarea>

            <button type="submit">Add Event</button>
        </form>

        <div id="eventList"></div>
    </div>

    <script>
        class EventManager {
            constructor() {
                this.events = JSON.parse(localStorage.getItem('events')) || [];
                this.renderEvents();
            }

            addEvent(event) {
                this.events.push(event);
                this.saveEvents();
                this.renderEvents();
            }

            saveEvents() {
                localStorage.setItem('events', JSON.stringify(this.events));
            }

            renderEvents() {
                const eventList = document.getElementById('eventList');
                eventList.innerHTML = '';

                this.events.forEach((event, index) => {
                    const eventCard = document.createElement('div');
                    eventCard.classList.add('event-card');
                    eventCard.innerHTML = `
                        <button class="delete-btn" onclick="eventManager.deleteEvent(${index})">üóëÔ∏è Delete</button>
                        <h3>${event.eventName} (${event.eventType})</h3>
                        <p>üìÖ Date: ${event.eventDate}</p>
                        <p>üìç Location: ${event.eventLocation}</p>
                        <p>üë• Guests: ${event.guestCount}</p>
                        <p>üìù Details: ${event.additionalDetails}</p>
                    `;
                    eventList.appendChild(eventCard);
                });
            }

            deleteEvent(index) {
                this.events.splice(index, 1);
                this.saveEvents();
                this.renderEvents();
            }
        }

        const eventManager = new EventManager();

        document.getElementById('eventForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const newEvent = {
                eventType: document.getElementById('eventType').value,
                eventName: document.getElementById('eventName').value,
                eventDate: document.getElementById('eventDate').value,
                eventLocation: document.getElementById('eventLocation').value,
                guestCount: document.getElementById('guestCount').value,
                additionalDetails: document.getElementById('additionalDetails').value
            };

            eventManager.addEvent(newEvent);
            this.reset();
        });
    </script>
